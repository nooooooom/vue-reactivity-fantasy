{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "importsNotUsedAsValues": "error",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vitest/globals"],
    "baseUrl": "."
  },
  "exclude": ["node_modules"]
}
